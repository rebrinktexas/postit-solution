
<br>

<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> found:</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class='well'>

  <div class='control-group'>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class='control-group'>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class='control-group'>
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 5 %>
  </div>
</div>

  <%= f.submit 'Submit Post', class: 'btn btn-primary' %>
<% end %>


